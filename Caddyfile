rps-game.ru {
    # Explicit routing for backend services
    handle /api* {
        reverse_proxy backend:3000
    }
    handle /auth* {
        reverse_proxy backend:3000
    }
    handle /health* {
        reverse_proxy backend:3000
    }
    handle /socket.io* {
        reverse_proxy backend:3000
    }
    
    # Default handling for everything else (frontend)
    handle {
        reverse_proxy cyber-rps:80
    }

    log {
        output file /var/log/caddy/access.log
    }
}

:80 {
    reverse_proxy cyber-rps:80
}
