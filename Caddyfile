rps-game.ru {
    # Match all backend paths
    @backend path /api* /auth* /health*
    reverse_proxy @backend backend:3000

    # Everything else goes to frontend
    reverse_proxy cyber-rps:80

    log {
        output file /var/log/caddy/access.log
    }
}

:80 {
    reverse_proxy cyber-rps:80
}
