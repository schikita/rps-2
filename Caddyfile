rps-game.ru {
    # Exclusive matcher for backend paths
    @backend path /api* /auth* /health*
    
    handle @backend {
        reverse_proxy backend:3000
    }
    
    # Default handling for everything else (frontend)
    handle {
        reverse_proxy cyber-rps:80
    }

    log {
        output file /var/log/caddy/access.log
    }
}

:80 {
    reverse_proxy cyber-rps:80
}
